<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ssafy.pjt.model.dao.RefreshTokenDao">

    <!-- 저장 or 갱신 -->
    <insert id="saveOrUpdate" parameterType="RefreshToken">
        INSERT INTO refresh_token (user_id, token, expiry)
        VALUES (#{userId}, #{token}, #{expiry})
        ON DUPLICATE KEY UPDATE
        token = #{token},
        expiry = #{expiry}
    </insert>

    <!-- 유저 아이디로 토큰 조회 -->
    <select id="findByUserId" parameterType="String" resultType="String">
        SELECT token FROM refresh_token WHERE user_id = #{userId}
    </select>

    <!-- 유저 토큰 삭제 -->
    <delete id="deleteByUserId" parameterType="String">
        DELETE FROM refresh_token WHERE user_id = #{userId}
    </delete>

</mapper>
